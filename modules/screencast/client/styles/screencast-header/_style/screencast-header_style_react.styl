.screencast-header

  &_style_react
    background #1F2127 url("screencast-header_style_react.png") 50% 50% no-repeat
    background-size cover
    padding 50px 50px 20px 50px

  &_style_react &__top
    font-size 24px
    opacity 0.6
    color #fff

  &_style_react &__title
    margin-bottom 50px

  &_style_react &__title-accent
    color #52D3FA
    padding-left 60px
    background url("react-small.svg") 10px center no-repeat

  &_style_react &__info,
  &_style_react & .share-icons__title
    color rgba(255,255,255,0.7)

  &_style_react &__button .simple-button__text
    color #52D3FA

  &_style_react .share-icons .share
    color #52D3FA

  &_style_react .share-icons .share:hover
    color hoverize(#52D3FA)

  &_style_react &__foot
    color #ffffff

  &_style_react &__tag
    position absolute
    top 27px
    right -60px

    margin 0
    padding 10px 60px

    color #1E2937 !important
    background #F9AB34
    text-decoration none !important

    transform rotate(45deg)

  &_style_react:after
    background url("arrow-react.svg")
    position static
    display block
    width 31px
    height 31px
    margin: 30px auto 0 auto;
    opacity: 0.5;
    content: "";
