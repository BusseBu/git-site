.page 
    height 100vh
    display flex    
    flex-direction row

    +size-tablet-portrait-down()
        display block
        height 100%
        padding-bottom 80px // to free up space for the fixed player

.page__main
    order 1
    flex 2
    overflow-y scroll
    display flex
    justify-content flex-end

    &::-webkit-scrollbar
        width: 0

    &::-webkit-scrollbar-track
        display: none

    .page__main-inner
        width 100%
        max-width layout-content-max-width
        padding 32px 56px

        +size-tablet-portrait-down()
            padding 0

.page__nav
    order 2
    flex 1
    overflow-y scroll
    border-left 1px solid color-grey-90

    +size-tablet-portrait-down()
        overflow-y auto